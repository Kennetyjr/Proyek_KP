<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Penjualan">

    <Spinner
        android:id="@+id/spinnerprodukpenjualan"
        android:layout_width="380dp"
        android:layout_height="57dp"
        android:layout_marginTop="168dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtjumlahbarangjual"
        android:layout_width="361dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Jumlah yang akan dibeli"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/spinnerprodukpenjualan"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="@+id/spinnerprodukpenjualan"
        app:layout_constraintTop_toBottomOf="@+id/spinnerprodukpenjualan" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Nama Produk :"
        app:layout_constraintBottom_toTopOf="@+id/spinnerprodukpenjualan"
        app:layout_constraintEnd_toEndOf="@+id/spinnerprodukpenjualan"
        app:layout_constraintHorizontal_bias="0.002"
        app:layout_constraintStart_toStartOf="@+id/spinnerprodukpenjualan" />

    <Button
        android:id="@+id/btnbuypenjualan"
        android:layout_width="184dp"
        android:layout_height="51dp"
        android:layout_marginBottom="56dp"
        android:text="Konfirmasi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtjumlahbarangjual"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="@+id/txtjumlahbarangjual" />

    <EditText
        android:id="@+id/txtnamapembeli"
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Pembeli"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Pembeli : "
        app:layout_constraintBottom_toTopOf="@+id/txtnamapembeli"
        app:layout_constraintEnd_toEndOf="@+id/txtnamapembeli"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtnamapembeli" />

    <EditText
        android:id="@+id/txtpenjualanketerangan"
        android:layout_width="305dp"
        android:layout_height="64dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Keterangan"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtjumlahbarangjual"
        app:layout_constraintStart_toStartOf="@+id/txtjumlahbarangjual"
        app:layout_constraintTop_toBottomOf="@+id/txtjumlahbarangjual" />

    <EditText
        android:id="@+id/txtcatatanpenjualan"
        android:layout_width="297dp"
        android:layout_height="62dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Catatan (Opsional)"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txtpenjualanketerangan"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/txtpenjualanketerangan"
        app:layout_constraintTop_toBottomOf="@+id/txtpenjualanketerangan" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>